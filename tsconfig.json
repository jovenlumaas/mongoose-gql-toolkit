{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "declaration": true,
      "outDir": "./lib",
      "strict": true,
      "allowJs": true,
      "esModuleInterop": true,
      "noImplicitAny": true,
      "noImplicitThis": false,
      "strictNullChecks": true,
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/__tests__/*"]
  }